<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.Label?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller">
   <stylesheets>
       <URL value="@digitron.css" />
   </stylesheets>

    <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" />
   </columnConstraints>
   <children>
      <Label fx:id="display" text="${controller.res}" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" />

       <Button fx:id="btn3"  onAction="#three" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" />

       <Button fx:id="btn5" onAction="#five" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />

       <Button fx:id="minusBtn" onAction="#subtract" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />

       <Button fx:id="divideBtn" onAction="#divide" text="/" GridPane.columnIndex="1" GridPane.rowIndex="1" />

       <Button fx:id="btn4" onAction="#four" text="4" GridPane.rowIndex="3" />

       <Button fx:id="btn8" onAction="#eight" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />

       <Button fx:id="plusBtn" onAction="#add" maxHeight="Infinity" text="+" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.rowSpan="2" />

       <Button fx:id="btn2" onAction="#two" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />

       <Button fx:id="modBtn" onAction="#mod" mnemonicParsing="false" text="\%" GridPane.rowIndex="1" />



       <Button fx:id="btn0" text="0" onAction="#zero" GridPane.columnSpan="2" GridPane.rowIndex="5" />

       <Button fx:id="btn1" text="1" onAction="#one" GridPane.rowIndex="4" />

       <Button fx:id="btn9" text="9" onAction="#nine" GridPane.columnIndex="2" GridPane.rowIndex="2" />

       <Button fx:id="btn7" text="7" onAction="#seven" GridPane.rowIndex="2" />

       <Button fx:id="btn6" text="6" onAction="#six" GridPane.columnIndex="2" GridPane.rowIndex="3" />

       <Button fx:id="equalsBtn" onAction="#equal" maxHeight="Infinity" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.rowSpan="2" />

       <Button fx:id="timesBtn" onAction="#multiplie" text="x" GridPane.columnIndex="2" GridPane.rowIndex="1" />

       <Button fx:id="dotBtn" onAction="#dot" text="." GridPane.columnIndex="2" GridPane.rowIndex="5" />
   </children>
</GridPane>
